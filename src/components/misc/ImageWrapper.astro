---
import path from "node:path";

interface Props {
	id?: string;
	src: string;
	class?: string;
	alt?: string;
	position?: string;
	basePath?: string;
}

import { getImage, Image } from "astro:assets";
import { url } from "../../utils/url-utils";

interface ImageFormat {
	src: string;
	type: string;
	format: string;
}

interface ImageFormats {
	availableFormats: ImageFormat[];
	fallbackSrc: string;
	fallbackFormat: string;
}

const { id, src, alt, position = "center", basePath = "/" } = Astro.props;
const className = Astro.props.class;

const isLocal = !(
	src.startsWith("/") ||
	src.startsWith("http") ||
	src.startsWith("https") ||
	src.startsWith("data:")
);
const isPublic = src.startsWith("/");

// TODO temporary workaround for images dynamic import
// https://github.com/withastro/astro/issues/3373
// biome-ignore lint/suspicious/noImplicitAnyLet: <check later>
let img;
if (isLocal) {
	const files = import.meta.glob<ImageMetadata>("../../**", {
		import: "default",
	});
	let normalizedPath = path
		.normalize(path.join("../../", basePath, src))
		.replace(/\\/g, "/");
	const file = files[normalizedPath];
	if (!file) {
		console.error(
			`\n[ERROR] Image file not found: ${normalizedPath.replace("../../", "src/")}`,
		);
	}
	img = await file();
}

const imageClass = "w-full h-full object-cover";
const imageStyle = `object-position: ${position}`;

// 生成不同格式的图片
async function generateImageFormats(image: ImageMetadata) {
	const formats = [
		{ name: "avif", type: "image/avif" },
		{ name: "webp", type: "image/webp" },
		{ name: "jpeg", type: "image/jpeg" },
		{ name: "png", type: "image/png" },
	];

	const availableFormats = [];

	// 按照优先级顺序生成每种格式
	for (const format of formats) {
		try {
			const optimizedImage = await getImage({
				src: image,
				format: format.name as "avif" | "webp" | "jpeg" | "png",
				width: image.width,
				height: image.height,
			});

			availableFormats.push({
				src: optimizedImage.src,
				type: format.type,
				format: format.name,
			});
		} catch (error) {
			// 如果生成失败，跳过这种格式
			console.warn(`Failed to generate ${format.name} format:`, error);
		}
	}

	// 检查原始图片格式
	const srcLower = image.src.toLowerCase();
	const isJpg = srcLower.endsWith(".jpg") || srcLower.endsWith(".jpeg");
	const isPng = srcLower.endsWith(".png");
	const isAvif = srcLower.endsWith(".avif");
	const isWebp = srcLower.endsWith(".webp");

	// 确定最终的降级格式 - 确保总是返回有效格式
	let fallbackFormat = "jpeg"; // 默认使用 jpeg
	if (availableFormats.length > 0) {
		fallbackFormat = availableFormats[availableFormats.length - 1].format;
	} else if (isAvif) {
		fallbackFormat = "avif";
	} else if (isWebp) {
		fallbackFormat = "webp";
	} else if (isPng) {
		fallbackFormat = "png";
	} else if (isJpg) {
		fallbackFormat = "jpeg";
	}

	return {
		availableFormats,
		// 如果没有任何可用的格式，使用原始图片
		fallbackSrc:
			availableFormats.length > 0
				? availableFormats[availableFormats.length - 1].src
				: image.src,
		fallbackFormat: fallbackFormat,
	};
}

let imageFormats: ImageFormats = {
	availableFormats: [],
	fallbackSrc: "",
	fallbackFormat: "jpeg",
};
if (isLocal && img) {
	imageFormats = await generateImageFormats(img);
}
---
<div id={id} class:list={[className, 'overflow-hidden relative']}>
    <div class="transition absolute inset-0 dark:bg-black/10 bg-opacity-50 pointer-events-none"></div>
    {isLocal && img && (
        <picture>
            {imageFormats.availableFormats.map((format) => (
                <source 
                    srcset={format.src} 
                    type={format.type} 
                />
            ))}
            <Image 
                src={img} 
                alt={alt || ""} 
                class={imageClass} 
                style={imageStyle} 
                format={imageFormats.fallbackFormat as "avif" | "webp" | "jpeg" | "png"} 
                loading="lazy" 
                decoding="async"
            />
        </picture>
    )}
    {!isLocal && (
        <picture>
            <img 
                src={isPublic ? url(src) : src} 
                alt={alt || ""} 
                class={imageClass} 
                style={imageStyle}
                loading="lazy"
                decoding="async"
            />
        </picture>
    )}
</div>
